                @Html.DisplayFor(modelItem => item.policy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.newsletter.newsletterId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.mailingListId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.mailingListId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.mailingListId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
